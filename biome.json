{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": [
			"**/*.d.ts",
			"backends/*",
			"build/*",
			"node_modules/*",
			"tmp/*",
			".vscode/*",
			".venv/*",
			".mypy_cache/*",
			".astro/*"
		],
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noEmptyPattern": "off"
			}
		}
	}
}
